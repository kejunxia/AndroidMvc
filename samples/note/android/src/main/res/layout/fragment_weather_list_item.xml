<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/note_item_bg"
    android:id="@+id/weather_item_root">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:padding="8dp"
        tools:text="City name"
        android:id="@+id/fragment_weather_list_item_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        tools:text="Clear"
        android:id="@+id/fragment_weather_list_item_weather" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        tools:text="10 degree"
        android:id="@+id/fragment_weather_list_item_temp" />
</LinearLayout>